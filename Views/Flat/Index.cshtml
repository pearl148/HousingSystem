@model IEnumerable<Flat>
@{
    ViewData["Title"] = "Index";

}
<partial name="_Notification"></partial>
<br><br>
<div class="col-12 text-end">
    <a asp-controller="Flat" asp-action="Create" class="btn btn-primary">
        Create Flat
    </a>
    </div>
    <br><br>
   
<table class="table table-border table-striped rounded-2" style="width:100%;text-align:center;background-color: rgba(100,100,100, 0.1) !important">
    <thead class="rounded-2">
        <tr>
            <th>
                Flat No.
            </th>
            <th>
                Sq. Feet Area
            </th>
            </tr>
    </thead>
    <tbody class="rounded-2">
    @foreach(var obj in Model)
    {
        <tr >
            <td width="50%">
                @obj.FlatNo
            </td>
             <td width="30%">
                @obj.SqFeetArea
            </td>
            <td>
                <div class="m-75 btn-group" role="group">
                    <a asp-controller="Flat" asp-action="Edit" asp-route-FlatNo ="@obj.FlatNo" class="btn btn-primary">Edit</a>
                </div>
            </td>
            <td>
                <div class="m-75 btn-group" role="group">
                    <a asp-controller="Flat" asp-action="Delete" asp-route-FlatNo ="@obj.FlatNo" class="btn btn-primary">Delete</a>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>
