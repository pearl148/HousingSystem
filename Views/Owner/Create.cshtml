@model Owner



<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Owner</h2>
            <hr/>
            </div>
            <div asp-validation-summary="All"></div>
            <div class="mb-3">
                <label asp-for="OwnerId"></label>
                <input asp-for="OwnerId" class="form-control"/>
                <span asp-validation-for="OwnerId" class="text-danger"></span>
                <label asp-for="OwnerFirstName"></label>
                <input asp-for="OwnerFirstName" class="form-control"/>
                <span asp-validation-for="OwnerFirstName" class="text-danger"></span>
                <label asp-for="OwnerLastName"></label>
                <input asp-for="OwnerLastName" class="form-control"/>
                <span asp-validation-for="OwnerLastName" class="text-danger"></span>
                <label asp-for="OwnerPhone"></label>
                <input asp-for="OwnerPhone" class="form-control"/>
                <span asp-validation-for="OwnerPhone" class="text-danger"></span>
                <label asp-for="OwnerEmailId"></label>
                <input asp-for="OwnerEmailId" class="form-control"/>
                <span asp-validation-for="OwnerEmailId" class="text-danger"></span>
                <label asp-for="OwnerDateOfPurchase"></label>
                <input asp-for="OwnerDateOfPurchase" class="form-control"/>
                <span asp-validation-for="OwnerDateOfPurchase" class="text-danger"></span>
                <label asp-for="FlatNo"></label>
                <input asp-for="FlatNo" class="form-control"/>
                <span asp-validation-for="FlatNo" class="text-danger"></span>

            </div>
    
    <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
    <a asp-controller="Owner" asp-action="Index" class="btn btn-secondary" style="width:150px">
        Back to list
    </a>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}


