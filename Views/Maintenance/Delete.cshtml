@model Maintenance



<form method="post" asp-action="DeletePost">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Maintenance</h2>
            <hr/>
            </div>
            <div asp-validation-summary="All"></div>
            <div class="mb-3">
                <label asp-for="FlatNo"></label>
                <input asp-for="FlatNo" class="form-control"/>
                <span asp-validation-for="FlatNo" class="text-danger"></span>
                <label asp-for="OccupantId"></label>
                <input asp-for="OccupantId" class="form-control"/>
                <span asp-validation-for="OccupantId" class="text-danger"></span>
                <label asp-for="MaintenanceId"></label>
                <input asp-for="MaintenanceId" class="form-control" value="@Model.MaintenanceId"/>
                <span asp-validation-for="MaintenanceId" class="text-danger"></span>
                <label asp-for="MaintenanceMonthYear"></label>
                <input type="month" asp-for="MaintenanceMonthYear" class="form-control"/>
                <span asp-validation-for="MaintenanceMonthYear" class="text-danger"></span>
                <label asp-for="MaintenanceAccountHead"></label>
                <div>
                    <input type="radio" asp-for="MaintenanceAccountHead" value="Maintenance"/>Maintenance
                    <input type="radio" asp-for="MaintenanceAccountHead" value="SinkingFund"/>Sinking Fund
                    <input type="radio" asp-for="MaintenanceAccountHead" value="Other"/>Other
                
            </div>
                
                <span asp-validation-for="MaintenanceAccountHead" class="text-danger"></span>
               
                <label asp-for="MaintenanceAmount"></label>
                <input asp-for="MaintenanceAmount" class="form-control"/>
                <span asp-validation-for="MaintenanceAmount" class="text-danger"></span>
                <label asp-for="MaintenanceRemark"></label>
                <input asp-for="MaintenanceRemark" class="form-control"/>
                <span asp-validation-for="MaintenanceRemark" class="text-danger"></span>
                
               

            </div>
    
    <button type="submit" class="btn btn-primary" style="width:150px">Delete</button>
    <a asp-controller="Maintenance" asp-action="Index" class="btn btn-secondary" style="width:150px">
        Back to list
    </a>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}


