@model User
<form method="post" asp-action="Verify">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <label asp-for="OccupantId"> Username </label>
    <input asp-for="OccupantId" class="form-control">
     <label asp-for="PasswordHash"> Password </label>
    <input type="password" asp-for="PasswordHash" class="form-control">
   <div>
        <button type="submit" class="btn btn-primary">Verify</button>
    </div>
</form>