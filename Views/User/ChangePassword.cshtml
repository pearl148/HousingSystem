@model HousingSystem.Models.User


<h1>Change Password</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method= "post" asp-action="ChangePassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="OccupantId" class="control-label"></label>
                    <input asp-for="OccupantId" class="form-control" />
            </div>
             <div class="form-group">
                <label asp-for="PasswordHash" class="control-label"></label>
                <input asp-for="PasswordHash" class="form-control" />
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label name="newpasswordHash" class="control-label">New-Password </label>
                <input name="newpasswordHash" class="form-control" />
               
            </div>
            
        
            
            <div class="form-group">
                <input type="submit" value="Change Password" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


