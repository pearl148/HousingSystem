@model HousingSystem.Models.User

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label" ></label>
                <input asp-for="Id" class="form-control" disabled/>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserRole" class="control-label"></label>
                <input type= "radio" asp-for="UserRole" value="Admin"/>Admin
                <input type= "radio" asp-for="UserRole" value="Chairman"/>Chairman
                <input type= "radio" asp-for="UserRole" value="Resident"/>Resident

                <span asp-validation-for="UserRole" class="text-danger"></span>
            </div>
            
             <div class="form-group">
                <label asp-for="PasswordHash" class="control-label"></label>
                <input asp-for="PasswordHash" class="form-control" />
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OccupantId" class="control-label"></label>
                <select asp-for="OccupantId" class ="form-control" asp-items="ViewBag.OccupantId"></select>
            </div>
            
        
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

